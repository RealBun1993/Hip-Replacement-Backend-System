{
  "version": 2,
  "builds": [
    {
      "src": "api/api.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "buildCommand": "pip install -r requirements.txt" // 使用 pip 安装依赖
      }
    }
  ],
  "routes": [
    {
      "src": "/api/predict_kidney",
      "dest": "/api/api.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/predict_blood",
      "dest": "/api/api.py",
      "methods": ["POST"]
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.8" // 指定 Python 版本
  },
  "functions": {
    "api/api.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
